.main {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  justify-content: space-around;
}
.main .main_item {
  overflow: hidden;
  box-sizing: border-box;
  margin: 30rpx 0;
  padding: 10rpx 5rpx;
  width: 33%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.main .main_item .item_image {
  width: 220rpx;
  height: 300rpx;
  position: relative;
}
.main .main_item .item_image image {
  width: 100%;
  height: 100%;
}
.main .main_item .item_image .item_con {
  position: absolute;
  bottom: 0;
  font-size: 28rpx;
  color: #fff;
}
.main .main_item .item_text {
  width: 100%;
  text-align: center;
  padding-top: 10rpx;
}
.main .main_item .item_text text {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  font-size: 30rpx;
}

video {
  width: 100%;
}
.controls .speed {
  margin: 10rpx;
}
.controls .speed .text {
  margin: 10rpx;
}
.controls .speed .btns {
  display: flex;
  text-align: center;
  width: 100%;
  border-bottom: 5rpx solid #ccc;
  padding-bottom: 32rpx;
}
.controls .speed .btns .control_speed {
  flex: 2;
  display: flex;
  justify-content: space-around;
  border-right: 8rpx solid #9a76ff;
}
.controls .speed .btns text {
  flex: 1;
  font-size: 70rpx;
}
.controls .url {
  margin: 10rpx;
}
.controls .url .text {
  margin: 10rpx;
}
.controls .url .btns {
  display: flex;
  width: 100%;
}
.controls .url .btns button {
  flex: 1;
}
.controls .url .btns text {
  flex: 1;
  font-size: 70rpx;
  text-align: center;
}
